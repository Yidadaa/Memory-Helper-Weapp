@import '/style/animation.wxss';

.bar-chart {
  height: 100%;
  width: 100%;
  position: relative;
}

.bar-content {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-end;
}

.blur-bar {
  filter: blur(2px);
}

.bar {
  display: inline-block;
  width: 10rpx;
  height: 0;
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 50rpx;
  margin-right: 10rpx;
  transform-origin: bottom center;
  transition: all ease .5s;
}

.tips {
  position: absolute;
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 0;
  left: 0;
  font-weight: bold;
}