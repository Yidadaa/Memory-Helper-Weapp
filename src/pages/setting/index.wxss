@import '/style/animation.wxss';
@import '/style/list.wxss';

.page-header {
  color: white;
}

.page-content {
  padding-top: 40rpx;
}

.user-container {
  display: flex;
  align-items: center;
  margin-top: 100rpx;
}

.user-info {
  margin-left: 30rpx;
}

.user-avatar {
  height: 128rpx;
  width: 128rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  overflow: hidden;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  padding: 10rpx 0;
}

.user-date {
  font-size: 28rpx;
}