<view>
  <view class="page-header page">
    <view class="page-title">设置</view>
    <view class="user-container">
      <open-data type="userAvatarUrl" class="user-avatar"></open-data>
      <view class="user-info">
        <view class="user-name">
          <open-data type="userNickName" lang="zh_CN"></open-data>
        </view>
        <view class="user-date">2018年07月20日加入</view>
      </view>
    </view>
  </view>
  <view class="page-content page">
    <view class="list-item ripple" hover-class="ripple-on-hover">
      <view class="list-head">
        <image class="list-icon" src="/imgs/export.svg"></image>
        <view class="list-text">数据导出</view>
      </view>
      <view class="list-tail">
        <image class="list-icon" src="/imgs/right.svg"></image>
      </view>
    </view>
    <view class="list-item ripple" hover-class="ripple-on-hover">
      <view class="list-head">
        <image class="list-icon" src="/imgs/thumb-up.svg"></image>
        <view class="list-text">捐赠</view>
      </view>
      <view class="list-tail">
        <image class="list-icon" src="/imgs/right.svg"></image>
      </view>
    </view>
    <view class="list-item ripple" hover-class="ripple-on-hover">
      <view class="list-head">
        <image class="list-icon" src="/imgs/face.svg"></image>
        <view class="list-text">开发者故事</view>
      </view>
      <view class="list-tail">
        <image class="list-icon" src="/imgs/right.svg"></image>
      </view>
    </view>
    <view class="list-item ripple" hover-class="ripple-on-hover" bind:tap="feedback">
      <view class="list-head">
        <image class="list-icon" src="/imgs/feedback.svg"></image>
        <view class="list-text">建议反馈</view>
      </view>
      <view class="list-tail">
        <image class="list-icon" src="/imgs/right.svg"></image>
      </view>
    </view>
  </view>
</view>