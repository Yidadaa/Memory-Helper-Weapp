@import '/style/card.wxss';
@import '/style/button.wxss';
@import '/style/animation.wxss';

.scroll-page {
  position: absolute;
  height: 100%;
}

.page-content {
  padding-bottom: 50rpx;
}

.page-header {
  padding-bottom: 200rpx;
  transition: all ease .3s;
}

.page-title {
  min-height: 80rpx;
  margin-bottom: 60rpx;
}

.page-content {
  margin-top: -150rpx;
}

.item-date-range {
  font-size: 28rpx;
  font-weight: bold;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

.item-info {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
  justify-content: space-between;
}

.info-group {
  display: flex;
  align-items: center;
}

.item-icon {
  height: 28rpx;
  width: 28rpx;
  margin-right: 10rpx;
}

.item-text {
  font-size: 28rpx;
}

.item-description {
  font-size: 32rpx;
}

.feed-card {
  background-color: #fff;
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}

.feed-card:last-child {
  margin-bottom: 0;
}

.bottom-buttons {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
  animation: slide-in-bottom .5s ease;
  padding-top: 0;
}

.bottom-buttons .common-btn {
  width: 48%;
}