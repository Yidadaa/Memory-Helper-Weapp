<!-- index.wxml -->
<view class="page">
  <view class="page-title">概览</view>
  <view class="today-summary with-radius">
    <view class="summary-date">2018 07 20</view>
    <view class="summary-number">
      <view class="summary-number-header">
        <view class="summary-number-title">待复习</view>
        <image class="summary-number-icon"></image>
      </view>
      <view class="summary-number-text">{{ remained }}</view>
    </view>
    <view class="summary-number">
      <view class="summary-number-header">
        <view class="summary-number-title">已完成</view>
        <image class="summary-number-icon"></image>
      </view>
      <view class="summary-number-text">{{ finished }}</view>
    </view>
    <view class="summary-number">
      <view class="summary-number-header">
        <view class="summary-number-title">预计耗时</view>
        <image class="summary-number-icon"></image>
      </view>
      <view class="summary-number-text summary-minutes">{{ time }}</view>
    </view>
  </view>
  <view class="section">
    <view class="section-header">
      <view class="section-title">所有项目</view>
      <navigator url="/pages/new-item/index" hover-class="btn-on-hover">
        <image src="/imgs/plus-circle.png" alt="添加" class="add-btn header-btn" />
      </navigator>
    </view>
    <view class="section-content all-items">
      <navigator class="content-block with-radius" wx:for="{{items}}" wx:key="index" url="/pages/item-page/index">
        <image class="block-icon" />
        <view class="block-title">{{item.title}}</view>
        <view class="block-tags">
          <view class="block-tag" wx:for="{{item.tags}}" wx:for-item="tag"
            wx:for-index="tkey" wx:key="tkey">{{tag}}</view>
        </view>
      </navigator>
    </view>
  </view>
  <fixed-bottom id="fixed-bottom">
    <view class="btn-container">
      <view class="common-btn primary-btn" hover-class="btn-on-hover">开始复习</view>
    </view>
  </fixed-bottom>
</view>