/**app.wxss**/
@import '/style/button.wxss';

/* 定义页面的通用布局样式 */
.page {
  padding: 160rpx 54rpx 0 54rpx;
}

.page-header {
  background-color: #00C0FF;
  color: #fff;
  padding-bottom: 100rpx;
}

.page-title {
  font-size: 56rpx;
  font-weight: bold;
}

.page-content {
  padding-top: 2rpx;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  position: relative;
  top: -50rpx;
  background-color: #fff;
}

/* 页面内容段的样式 */
.section {
  margin-top: 60rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
}

.header-btn {
  height: 40rpx;
  width: 40rpx;
}

.section-content {
  margin-top: 40rpx;
}

/* 为卡片添加圆角 */
.with-radius {
  border-radius: 40rpx;
}